= form_for(@spot) do |f|
  - if @spot.errors.any?
    #error_explanation
      %h2
        = pluralize(@spot.errors.count, "error")
        prohibited this spot from being saved:
      %ul
        - @spot.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :artist
    %br/
    = f.text_field :artist
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
